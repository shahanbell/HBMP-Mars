<!--pages/businesstrip/businesstripdetail.wxml-->
<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
  <view class="page__hd">
    <view class="page__title">出差明细</view>
  </view>
  <view class="page__bd">
    <form bindreset="formReset">
      <van-cell-group>
        <van-field
        label="出差人员"
        value="{{bizEmployeeName}}"
        required
        icon="search"
        placeholder="请选择出差人员"
        bindtap="bindUserSelect"
        />
      </van-cell-group>
 <!-- 日期选择弹窗 -->
      <van-popup show="{{ showDate }}" position="bottom" bind:close="bindCloseDate">
        <van-datetime-picker type="date" id="picker1" value="{{showInitDate}}" bind:cancel="bindDateCancel" bind:confirm="bindDateConfirm" bind:input="bindDateInput" formatter="{{formatter}}" />
      </van-popup>
      <!-- 时间选择弹窗 -->
      <van-popup show="{{ showTime }}" position="bottom" bind:close="bindCloseTime">
        <van-datetime-picker type="time" id="picker1" value="{{showDateInit}}" bind:cancel="bindTime1Cencel" bind:confirm="bindTime1Confirm" bind:input="bindTime1Input" formatter="{{formatter}}" />
      </van-popup>
      <van-cell-group>
          <van-field label="出差日期" required value="{{bizDate}}" use-button-slot readonly bindtap='bindPickerDate'>
            <van-icon slot="button" name="arrow" />
          </van-field>
      </van-cell-group>
      <van-cell-group>
          <van-field label="开始时间" required value="{{bizTime1}}" id='bizTime1' use-button-slot readonly bindtap='bindPickerTime'>
            <van-icon slot="button" name="arrow" />
          </van-field>
      </van-cell-group>
      <van-cell-group>
          <van-field label="截止日期" required value="{{bizTime2}}" id='bizTime2' use-button-slot readonly bindtap='bindPickerTime'>
            <van-icon slot="button" name="arrow" />
          </van-field>  
      </van-cell-group>
      <van-cell-group>
        <van-field
          label = "客户名称"
          value="{{ bizObject }}"
          placeholder="请输入客户名称"
          border="{{ false }}"
          bind:change="bindBizObjectChange"
        />
      </van-cell-group>
      <van-cell-group>
        <van-field
          label = "出差地址"
          required
          value="{{ bizAddress }}"
          placeholder="请输入出差地址"
          border="{{ false }}"
          bind:change="bindBizAddressChange"
        />
      </van-cell-group>
      <view class="weui-cells__title">具体安排</view>
      <van-cell-group>
        <van-field custom-style="height:100px"
          value="{{ bizContent }}"
          type="textarea"
          placeholder="请输入具体安排内容"
          autosize
          required
          bind:change="bindBizContentChange"
        />
      </van-cell-group>
      <view style="text-align:center;margin-top:12px">
        <van-button color="#0396FF" round form-type="submit" type="info" bind:click="formSubmit">添加</van-button>
      </view>
    </form>
  </view>
</view>