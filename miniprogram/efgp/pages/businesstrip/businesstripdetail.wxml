<!--pages/businesstrip/businesstripdetail.wxml-->
<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
  <view class="page__hd">
    <view class="page__title">出差明细</view>
  </view>
  <view class="page__bd">
    <form bindsubmit="formSubmit" bindreset="formReset">
      <van-cell-group>
        <van-field
        label="出差人员"
        value="{{bizEmployeeName}}"
        required
        icon="search"
        placeholder="请选择出差人员"
        bindtap="bindUserSelect"
        />
      </van-cell-group>
      <van-cell-group>
        <picker mode="date" start="2019-07-01" end="2023-06-30" bindchange="bindBizDateChange">
          <van-field label="出差日期" required value="{{bizDate}}" use-button-slot readonly>
            <van-icon slot="button" name="arrow" />
          </van-field>
        </picker>
      </van-cell-group>
      <van-cell-group>
        <picker mode="time" bindchange="bindTime1Change">
          <van-field label="开始时间" required value="{{bizTime1}}" use-button-slot readonly>
            <van-icon slot="button" name="arrow" />
          </van-field>
        </picker>
      </van-cell-group>
      <van-cell-group>
          <picker mode="date" start="2019-07-01" end="2023-06-30" bindchange="bindTime2Change">
          <van-field label="截止日期" required value="{{bizTime2}}" use-button-slot readonly>
            <van-icon slot="button" name="arrow" />
          </van-field>  
        </picker>
      </van-cell-group>
      <van-cell-group>
        <van-field
          label = "客户名称"
          value="{{ bizObject }}"
          placeholder="请输入客户名称"
          border="{{ false }}"
          bind:change="bindBizObjectChange"
        />
      </van-cell-group>
      <van-cell-group>
        <van-field
          label = "出差地址"
          required
          value="{{ bizAddress }}"
          placeholder="请输入出差地址"
          border="{{ false }}"
          bind:change="bindBizAddressChange"
        />
      </van-cell-group>
      <view class="weui-cells__title">具体安排</view>
      <van-cell-group>
        <van-field custom-style="height:100px"
          value="{{ bizContent }}"
          type="textarea"
          placeholder="请输入具体安排内容"
          autosize
          bind:change="bindBizContentChange"
        />
      </van-cell-group>
      <view style="text-align:center;margin-top:12px">
        <van-button color="#0396FF" round form-type="submit" type="primary">添加</van-button>
      </view>
    </form>
  </view>
</view>