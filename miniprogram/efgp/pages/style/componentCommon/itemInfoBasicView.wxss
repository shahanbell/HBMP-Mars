.itemInfoCard .cardWrapTop {
  width: 100%;
  height: 20rpx;
}

.itemInfoCard .mainInfo {
  width: 95%;
  /* height: 485rpx; */
  border-radius: 16rpx;
  background-color: rgb(255, 255, 255);
  margin-bottom: 20rpx;
  margin-left: auto;
  margin-right: auto;
  padding: 30rpx 24rpx 0 24rpx;
  box-sizing: border-box;
}

.itemInfoCard .mainInfo_header,
.mainInfo_body,
.mainInfo_foot {
  display: flex;
  justify-content: space-between;
}

.itemInfoCard .mainInfo_text_normal {
  font-size: 26rpx;
  color: #333;
}

.itemInfoCard .mainInfo_text_normal image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
  position: relative;
  top: 8rpx;
  /* margin-top: 15rpx; */
}

.itemInfoCard .mainInfo .state {
  font-size: 26rpx;
  color: #FF4B0A;
}


.itemInfoCard .mainInfo_body {
  padding: 30rpx 0;
  box-sizing: border-box;
}

.itemInfoCard .mainInfo_body_img {
  width: 110rpx;
  height: 110rpx;
  border-radius: 10rpx;
  overflow: hidden;
  /* background-color: pink; */
}

.itemInfoCard .mainInfo_body_right {
  width: 522rpx;
  padding-top: 12rpx;
  box-sizing: border-box;
}

.itemInfoCard .mainInfo_body_text {
  display: flex;
  vertical-align: middle;
  justify-content: space-between;
  justify-items: middle;
}

.itemInfoCard .mainInfo_body_text_title {
  font-size: 28rpx;
  color: #000;
  line-height: 45rpx;
  white-space: nowrap;
  max-width: 480rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.itemInfoCard .mainInfo_body_text_title .iconfont {
  font-size: 30rpx;
}

.itemInfoCard .mainInfo_body_text_dtt {
  font-size: 24rpx;
  color: #999;
}

.itemInfoCard .mainInfo_body_text_btt {
  font-size: 24rpx;
  color: #000;
}

.itemInfoCard .mainInfo_body_text_acount {
  font-size: 26rpx;
  color: #999;
}

.itemInfoCard .mainInfo_foot {
  font-size: 24rpx;
  color: #333;
  line-height: 82rpx;
  border-top: 2rpx solid #eee;
  white-space: nowrap;
}

.itemInfoCard .mainInfo_foot text {
  position: relative;
  font-size: 26rpx;
  color: #000;
}