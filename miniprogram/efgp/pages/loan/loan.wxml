<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
  <view class="page__hd">
    <view class="page__title">借支申请</view>
  </view>
  <view class="page__bd">
    <form bindsubmit="formSubmit" bindreset="formReset">
    <van-cell-group>
          <van-field
            label = "公司别"
            value="{{ company }}"
            placeholder="请选择申请公司"
            bindtap="bindCompanySelect"
            icon="search"
          />
      </van-cell-group>
      <van-cell-group>
        <picker mode="date" start="2019-07-01" end="2023-06-30" bindchange="bindLoanDateChange">
          <van-field label="借支日期" required value="{{loanDate}}" use-button-slot readonly>
            <van-icon slot="button" name="arrow" />
          </van-field>
        </picker>
      </van-cell-group>
      <van-cell-group>
          <van-field
            label = "申请人员"
            value="{{ employeeName }}"
            placeholder="请输入申请人员"
          />
      </van-cell-group>
      <van-cell-group>
        <van-field
          label="申请部门"
          value="{{ deptName }}"
          required
          icon="search"
          placeholder="请选择申请部门"
          bindtap="bindDeptSelect"
        />
      </van-cell-group>
      <van-cell-group>
        <van-field
          label="借支性质"
          value="{{ loanPropertyDesc }}"
          required
          icon="search"
          placeholder="请选择借支性质"
          bindtap="bindLoanProperty"
        />
      </van-cell-group>
      <van-cell-group>
        <van-field
          label="预算科目"
          value="{{ preAccno }}"
          required
          icon="search"
          placeholder="请选择预算科目"
          bindtap="bindBudgetacc"
        />
      </van-cell-group>
      <van-cell-group>
        <van-field
          label="币别"
          value="{{ coinDesc }}"
          required
          icon="search"
          placeholder="请选择币别"
          bindtap="bindCoin"
        />
      </van-cell-group>
      <van-cell-group>
        <picker mode="date" start="2019-07-01" end="2023-06-30" bindchange="bindPrePayDateChange">
          <van-field label="预计付款日" required value="{{prePayDate}}" use-button-slot readonly>
            <van-icon slot="button" name="arrow" />
          </van-field>
        </picker>
      </van-cell-group>
      <view class="weui-cells__title">费用明细</view>
      <van-cell-group>
        <van-field v-model="number" type="digit" label="交通费"
        model:value="{{trafficfee}}"
        bindinput="getmoney"
        data-iname="trafficfee" />
      </van-cell-group>
      <van-cell-group>
        <van-field v-model="number" type="digit" 
        label="住宿费"
        model:value="{{accommodation}}"
        bindinput="getmoney"
        data-iname="accommodation" />
      </van-cell-group>
      <van-cell-group>
        <van-field v-model="number" type="digit" 
        label="招待费"
        model:value="{{entertain}}"
        bindinput="getmoney"
        data-iname="entertain" />
      </van-cell-group>
      <van-cell-group>
        <van-field v-model="number" type="digit" 
        label="出差补贴"
        model:value="{{allowance}}"
        bindinput="getmoney"
        data-iname="allowance" />
      </van-cell-group>
      <van-cell-group>
        <van-field v-model="number" type="digit" 
        label="其他费用"
        model:value="{{other}}"
        bindinput="getmoney"
        data-iname="other" />
      </van-cell-group>
      <van-cell-group>
        <van-field v-model="number" type="digit" 
        label="借款总额"
        placeholder="请输入借款总额"
        model:value="{{loanTotal}}"
         />
      </van-cell-group>
      <view class="weui-cells__title">借支理由</view>
      <van-cell-group>
        <van-field custom-style="height:100px"
          type="textarea"
          model:value="{{ reason }}"
          placeholder="请输入借支理由"
          bindblur="bindReasonChange"
          autosize
        />
      </van-cell-group>
      <van-button custom-class="submitbtn" type="info" icon="passed" form-type="submit">提交</van-button>
    </form>
  </view>
</view>