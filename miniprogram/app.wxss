@import "style/weui.wxss";

page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 10px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 16px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

.weui-panel__hd .button-default {
  float: right;
  padding-right: 20rpx;
}

.weui-panel__hd .button-warn {
  float: right;
  color: red;
  padding-right: 20rpx;
}

.button-sp-area .weui-btn {
  margin-top: 20rpx;
}
