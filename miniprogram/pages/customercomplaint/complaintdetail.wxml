<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
  <view class="page__hd">
    <view class="page__title">叫修明细</view>
  </view>
  <view class="page__bd">
    <form bindsubmit="formSubmit" bindreset="formReset">
      <van-cell-group>
        <van-field
          label="单别"
          value="{{ formName }}"
          required
          icon="search"
          placeholder="请选择单别"
          bind:click-icon="bindFormSelect"
          bindtap="bindFormSelect"
        />
      </van-cell-group>
      <van-cell-group>
        <van-field
          label="机型"
          value="{{ machineTypeName }}"
          required
          icon="search"
          placeholder="请选择机型"
          bind:click-icon="bindMachineTypeSelect"
          bindtap="bindMachineTypeSelect"
        />
      </van-cell-group>
      <van-cell-group>
        <van-field
          label="产品序号"
          value="{{ productNumberId }}"
          required
          icon="search"
          placeholder="请选择产品序号"
          bind:click-icon="bindProductNumberSelect"
          bindtap="bindProductNumberSelect"
        />
      </van-cell-group>
      <van-cell-group>
        <van-field
          label="产品品号"
          value="{{ productQuality }}"
          required
        />
      </van-cell-group>
      <van-cell-group>
        <van-field
          label="产品品名"
          value="{{ product_name }}"
          required
        />
      </van-cell-group>
      <van-cell-group>
        <van-field
          label="产品规格"
          value="{{ productStandard }}"
          required
        />
      </van-cell-group>
      <view style="text-align:center;margin-top:12px">
        <van-button color="#0396FF" round form-type="submit" type="primary">添加</van-button>
      </view>
    </form>
  </view>
</view>