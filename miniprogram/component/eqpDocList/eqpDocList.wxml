<!--component/eqpDocList/eqpDocList.wxml-->
<!-- 触发时才显示的组件 -->
<van-popup
    show="{{ show.filterPopup }}"
    position="right"
    round
    custom-style="height: 95%;width: 95%;"
    bind:close="closeSearchFilterPopup"
>
<van-cell-group border="{{ false }}">

  <van-cell title="报修单状态" is-link value="{{statusFilterObj.statusDesc}}" arrow-direction="down" bind:click="onStatusFilterCellClick" />

  <van-cell border="{{ true }}" class="haTimeCell" title="部门所有单据" value="{{ date }}">
   
    <van-switch size="22px" active-color="#7232dd" checked="{{ deptFilterChecked }}" bind:change="onDeptFilterSwitchChange" />

  </van-cell>

  <van-cell border="{{ false }}" class="haTimeCell" title="故障发生时间" value="{{ date }}">
   
    <van-switch size="22px" active-color="#7232dd" checked="{{ dateFilterChecked }}" bind:change="onDateFilterSwitchChange" />

  </van-cell>


<view class="timeFilterBlock">
  <input value="{{ startDateFilter }}" disabled="true" class="filterInput" placeholder="起始日" placeholder-class="center" placeholder-style="font-size: 0.8em;" ontap="onStartFilterTap" bindinput="passWdInput" />
  <view class='line'></view>
  <input value="{{ endDateFilter }}" disabled="true" class="filterInput" placeholder="结束日" placeholder-class="center" placeholder-style="font-size: 0.8em;" ontap="onEndFilterTap" bindinput="passWdInput" />
</view>

</van-cell-group>

<view class="buttonBlock">
  <van-button round color="#DCDCDC" size="small" custom-style="color:#696969;width:80px;" bind:click="onFilterResetClick" >重置</van-button>
  <van-button round color="#9565E6" size="small" custom-style="margin-left:30px;width:80px;" bind:click="onFilterConfirmClick" >确定</van-button>
</view>

</van-popup>

<van-popup
    show="{{ show.dateFilterPopup }}"
    position="bottom"
    bind:close="closeDateFilterPopup"
>

  <van-datetime-picker
  type="date"
  id = "picker1"
  value="{{ currentDate }}"
  bind:cancel="onDateFilterCancel"
  bind:confirm="onDateFilterConfirm"
  bind:input="onDateFilterInput"
  min-date="{{minDate}}"
  max-date="{{currentDate}}"
  formatter="{{ formatter }}"
  />

</van-popup>

<van-popup
    show="{{ show.statusFilterPopup }}"
    position="bottom"
    bind:close="closeStatusFilterPopup"
>

  <van-picker
  show-toolbar
  title="报修单状态"
  columns="{{ statusFilterData }}"
  value-key="statusDesc"
  bind:cancel="onStatusFilterPickerCancel"
  bind:confirm="onStatusFilterPickerConfirm"
  bind:change="onStatusFilterPickerChange"
  />

</van-popup>
<!-- 触发时才显示的组件-end -->

<van-cell-group>

<van-search
  id="proSearchBar"
  value="{{extraFilterValue}}"
  data-name="extraFilterValue"
  shape="round"
  placeholder="请输入搜索关键词"
  bind:change="bindData"
  bind:search="pullDownTest"
  use-action-slot
  use-right-icon-slot
>


    <van-button round slot="action" color="#9565E6" icon="filter-o" size="small" bind:click="onSearchFilterButtonClick">筛选</van-button>

    <van-icon class="searchRightIcon" slot="right-icon" name="scan" color="red" size="20px" bind:click="startScanCode"/>


</van-search>

</van-cell-group>

<view class="swiper-tab" id="proTopTab">
  <view wx:for="{{navTab}}" wx:key="{{index}}" class="swiper-tab-list {{currentTab==index ? 'on_pdd' : ''}}" data-current="{{index}}" bindtap="switchNav">{{item}}</view>
</view>
<view id="start" class='startView'></view>

<view class="c_t60"></view> 

<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight}}px" bindchange="bindChange">
  <swiper-item wx:for="{{navTabPro}}" wx:key="{{value}}">
  <view class="scrollTest">

    <scroll-view wx:if="{{item.showScrollBar}}" class="scrollWrap" scroll-y="true" refresher-enabled="{{enablePullDown}}" refresher-triggered="{{refreshTrigger}}" bindrefresherrefresh="pullDownTest" style='height:{{winHeight}}px;'>
      <view class="eqpListWrap">
      </view>
      <van-empty wx:if="{{showDocEmpty}}" image="/images/empty-image-search.png" description="请下拉搜索"/>
      <my-noData wx:if="{{orderList.length<1&&!loading}}" nodata="{{nodataType}}"></my-noData>
      <view class="orderList" wx:for="{{repairDocListArray[currentTab]}}" wx:key="index" data-item="{{item}}" bindtap='docCardSelect'>
        <view class="shop">
          <view class="shop_name">
            报修单号:{{item.shop}}
          </view>
          <text class="state {{item.origin=='TaoBao' ? 'state_taobao' : item.origin=='PinDuoDuo' ? 'state_pdd' : item.origin=='JDCOM' ? 'state_jd' : ''}}">{{item.orderstate}}</text>
        </view>
        <view class="proInfo">
          <image class="proInfo_img" src='{{item.pictureurl==""?defaultImg:item.pictureurl}}' mode='widthFix' lazy-load='true' binderror="errorFn" data-errorimg="{{index}}"></image>
          <view class="proInfo_right">
            <view class="proInfo_text">
              <view class="proInfo_text_title">
                {{item.couponname}}
              </view>
              <text class="iconfont icon-qianjinjiantou"></text>
            </view>
            <view class="proInfo_text">
              <view class="proInfo_text_dtt">{{item.orderdtt}}</view> 
              <text class="proInfo_text_acount">×{{item.productcount}}</text>
            </view>
          </view>
        </view>
        <view class="orderNum">
          <view>故障发生时间:{{item.ordernum}}</view>
          <view>报修人:<text>{{item.payamount}}</text></view>
        </view>
 
      </view>

    </scroll-view>

  </view>
  </swiper-item>
</swiper>

